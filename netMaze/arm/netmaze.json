{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "westus",
            "allowedValues": [
                "northeurope",
                "westus",
                "eastus",
                "westeurope",
                "centralindia"
            ]
        },
        "storageName": {
            "type": "string",
            "minLength": 5,
            "maxLength": 15
        },
        "envName": {
            "type": "string",
            "defaultValue": "prod",
            "allowedValues": [
                "prod",
                "dev",
                "testing"
            ]
        },
        "projectName": {
            "type": "string"
        },
        "vnetAddressPrefix": {
            "type": "string"
        },
        "webappSubnetPrefix": {
            "type": "string"
        },
        "adminSubnetPrefix": {
            "type": "string"
        },
        "dbSubnetPrefix": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring",
            "minLength": 5,
            "maxLength": 15
        },
        "vmOffer": {
            "type": "string",
            "defaultValue": "WindowsServer"
        },
        "vmPublisher": {
            "type": "string",
            "defaultValue": "MicrosoftWindowsServer"   
        },
        "vmsku": {
            "type": "string",
            "defaultValue": "2022-datacenter-azure-edition",
            "allowedValues": [
                "2016-datacenter-gensecond",
                "2016-datacenter-server-core-g2",
                "2016-datacenter-server-core-smalldisk-g2",
                "2016-datacenter-smalldisk-g2",
                "2016-datacenter-with-containers-g2",
                "2016-datacenter-zhcn-g2",
                "2019-datacenter-core-g2",
                "2019-datacenter-core-smalldisk-g2",
                "2019-datacenter-core-with-containers-g2",
                "2019-datacenter-core-with-containers-smalldisk-g2",
                "2019-datacenter-gensecond",
                "2019-datacenter-smalldisk-g2",
                "2019-datacenter-with-containers-g2",
                "2019-datacenter-with-containers-smalldisk-g2",
                "2019-datacenter-zhcn-g2",
                "2022-datacenter-azure-edition",
                "2022-datacenter-azure-edition-core",
                "2022-datacenter-azure-edition-core-smalldisk",
                "2022-datacenter-azure-edition-smalldisk",
                "2022-datacenter-core-g2",
                "2022-datacenter-core-smalldisk-g2",
                "2022-datacenter-g2",
                "2022-datacenter-smalldisk-g2"
            ]
        }
    
        
        
        
    },
    "functions": [],
    "variables": {
        "uniqueStorageName": "[concat(parameters('storageName'),uniqueString(resourceGroup().id))]",
        "vnetName": "[format('{0}-{1}-vnet',parameters('envName'),parameters('projectName'))]",
        "nicName": "[format('{0}-{1}-nic',parameters('envName'),parameters('projectName'))]",
        "nsgName": "[format('{0}-{1}-nsg',parameters('envName'),parameters('projectName'))]",
        "webNsgName":"[format('{0}-{1}-webnsg',parameters('envName'),parameters('projectName'))]"
        
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-01-01",
            "kind": "StorageV2",
            "name": "[variables('uniqueStorageName')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "location": "[parameters('location')]",
            "properties": {
                "allowBlobPublicAccess": true
            }
        },

        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "location": "[parameters('location')]",
            "name": "[variables('nsgName')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "allow-rdp",
                        "properties": {
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationPortRange": "3389",
                            "destinationAddressPrefix": "*"
                            
                            
                        }
                     }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "name": "[variables('webNsgName')]",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "allow-http",
                        "properties": {
                            "access": "Allow",
                            "protocol": "Tcp",
                            "priority": 101,
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationPortRange": "80",
                            "destinationAddressPrefix": "*"
                        }
                     },
                     {
                        "name": "allow-https",
                        "properties": {
                            "access": "Allow",
                            "direction": "Inbound",
                            "priority": 200,
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationPortRange": "443",
                            "destinationAddressPrefix": "*"
                        }
                      },
                      {
                        "name": "allow-rdp",
                        "properties": {
                            "access": "Allow",
                            "priority": 120,
                            "direction": "Inbound",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationPortRange": "3389",
                            "destinationAddressPrefix": "*"
                                                      
                        }
                      }
                ]
            }
        },       
        
        {
            "type": "Microsoft.Network/virtualnetworks",
            "apiVersion": "2023-04-01",
            "location": "[parameters('location')]",
            "name": "[variables('vnetName')]",

            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "webapp-subnet",
                        "properties": {
                            "addressPrefix": "[parameters('webappSubnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('webNsgName'))]"
                            }
                        }

                     },
                     {
                        "name": "admin-subnet",
                        "properties": {
                            "addressPrefix": "[parameters('adminSubnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('nsgName'))]"
                            }
                        }
                     },
                     {
                        "name": "db-subnet",
                        "properties": {
                            "addressPrefix": "[parameters('dbSubnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('nsgName'))]"
                            }
                        }
                     }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('webNsgName'))]"
            ]
         },

         {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-04-01",
            "location":"[parameters('location')]",
            "name": "[format('web-{0}',variables('nicName'))]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), 'webapp-subnet')]"
                                        }
                                    }
                    }
               ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualnetworks', variables('vnetName'))]"
            ]
         },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-04-01",
            "location":"[parameters('location')]",
            "name": "[format('admin-{0}',variables('nicName'))]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), 'admin-subnet')]"
                                        }
                                    }
                    }
               ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualnetworks', variables('vnetName'))]"
            ]
         },
         

         {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-04-01",
            "location":"[parameters('location')]",
            "name": "[format('db-{0}',variables('nicName'))]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), 'db-subnet')]"
                                        }
                                    }
                    }
               ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualnetworks', variables('vnetName'))]"
            ]
         },

         {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2023-04-01",
            "name": "[format('{0}public-ip',parameters('projectName'))]",
            "location": "[parameters('location')]",
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static"
            },
            "sku": {
                "name": "Standard",
                "tier": "Regional"
            }
         },

         {
            "type": "Microsoft.Network/loadBalancers",
            "apiVersion": "2023-04-01",
            "name": "[format('{0}-LB',parameters('projectName'))]",
            "sku": {
                "name": "Standard",
                "tier": "Regional"
            },
            "location": "[parameters('location')]",
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "frontend-ip",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',format('{0}public-ip',parameters('projectName')))]"
                            }
                        }
                     }
                     
                ],
                "probes": [
                    {
                        "name": "LB-probe",
                        "properties": {
                            "port": 80,
                            "numberOfProbes": 5,
                            "protocol": "Tcp",
                            "intervalInSeconds": 10
                        }
                     }
                ],
                "backendAddressPools": [
                    {
                        "name": "LB-pools"
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "LB-rule",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations',format('{0}-LB',parameters('projectName')),'frontend-ip')]"
                            },
                            "backendAddressPool": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools',format('{0}-LB',parameters('projectName')),'LB-pools')]"
                            },
                            "probe": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/probes',format('{0}-LB',parameters('projectName')),'LB-probe')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort":80,
                            "backendPort": 80,
                            "idleTimeoutInMinutes": 5,
                            "enableFloatingIP": false
                        }
                     }
                ],
                "inboundNatRules": [
                    {
                        "name": "LB-RDP",
                        "properties": {
                            "protocol": "Tcp",
                            "frontendPortRangeStart": 1000,
                            "frontendPortRangeEnd": 1100,
                            "backendPort":3389,
                            "frontendIPConfiguration": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations',format('{0}-LB',parameters('projectName')),'frontend-ip')]"
                            },
                            "idleTimeoutInMinutes": 5,
                            "enableFloatingIP": false
                            
                        }
                     }
                ]
            }
         },


         {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-03-01",
            "name": "[format('webvm-{0}',parameters('projectName'))]",
           "location": "[parameters('location')]",
           "properties": {
            "storageProfile": {
                "imageReference": {
                    "offer": "[parameters('vmOffer')]",
                    "publisher": "[parameters('vmPublisher')]",
                    "sku": "[parameters('vmsku')]",
                    "version": "latest"
                },
                "osDisk": {
                    "createOption": "FromImage",
                    "managedDisk": {
                        "storageAccountType": "Premium_LRS"
                    },
                    "name": "webvm-osdisk"
                    }
                },
                "securityProfile": {
                    "securityType": "TrustedLaunch",
                    "uefiSettings": {
                        "secureBootEnabled": true,
                        "vTpmEnabled": true
                    }
                },
                "osProfile": {
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true
                    },
                    "computerName": "[format('webvm-{0}',parameters('projectName'))]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',format('web-{0}',variables('nicName')))]"
                         }
                    ]
                },
                "hardwareProfile": {
                    "vmSize": "Standard_DS2_v2"
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
                
            },
            
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', format('web-{0}',variables('nicName')))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueStorageName'))]"
            ]
        },

        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-03-01",
            "name": "[format('adminvm-{0}',parameters('projectName'))]",
           "location": "[parameters('location')]",
           "properties": {
            "storageProfile": {
                "imageReference": {
                    "offer": "[parameters('vmOffer')]",
                    "publisher": "[parameters('vmPublisher')]",
                    "sku": "[parameters('vmsku')]",
                    "version": "latest"
                },
                "osDisk": {
                    "createOption": "FromImage",
                    "managedDisk": {
                        "storageAccountType": "Premium_LRS"
                    },
                    "name":"adminvm-osdisk"
                    }
                },
                "securityProfile": {
                    "securityType": "TrustedLaunch",
                    "uefiSettings": {
                        "secureBootEnabled": true,
                        "vTpmEnabled": true
                    }
                },
                "osProfile": {
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true
                    },
                    "computerName": "[format('adminvm-{0}',parameters('projectName'))]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',format('admin-{0}',variables('nicName')))]"
                         }
                    ]
                },
                "hardwareProfile": {
                    "vmSize": "Standard_DS2_v2"
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
                
            },
            
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', format('admin-{0}',variables('nicName')))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueStorageName'))]"
            ]
        }

     
    
         
    ],
    "outputs": {}
}